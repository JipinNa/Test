<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.chioy.test.Patient_Info_Card">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textSize="35sp"
                    android:text="  I D ："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textSize="35sp"
                    android:text="姓名："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textSize="35sp"
                    android:text="性别："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textSize="35sp"
                    android:text="年龄："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textSize="35sp"
                    android:text="身高："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textSize="35sp"
                    android:text="体重："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:id="@+id/edtId2"
                    android:layout_width="200dp"
                    android:layout_height="47dp"/>
            <EditText
                    android:id="@+id/edtName2"
                    android:layout_width="200dp"
                    android:layout_height="47dp"/>
            <EditText
                    android:id="@+id/edtSex2"
                    android:layout_width="200dp"
                    android:layout_height="47dp"/>
            <EditText
                    android:id="@+id/edtAge2"
                    android:layout_width="200dp"
                    android:layout_height="47dp"/>
            <EditText
                    android:id="@+id/edtHeight2"
                    android:layout_width="200dp"
                    android:layout_height="47dp"/>
            <EditText
                    android:id="@+id/edtWeight2"
                    android:layout_width="200dp"
                    android:layout_height="47dp"/>

        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="提交"
            android:layout_width="159dp"
            android:layout_height="72dp" tools:layout_editor_absoluteY="383dp"
            tools:layout_editor_absoluteX="83dp"
            android:id="@+id/btnSubmit"
            tools:ignore="MissingConstraints"/>

</LinearLayout>
